<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro">


    <Button
        android:id="@+id/login"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo"
        android:fontFamily="@font/alata_regular"
        android:paddingHorizontal="60dp"
        android:text="@string/title_activity_registro"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="42dp" />

    <EditText
        android:id="@+id/mascota"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:autofillHints=""
        android:background="@drawable/borde_redondo_transparente"
        android:fontFamily="@font/alata_regular"
        android:hint="@string/pet_name"
        android:inputType="TODO"
        android:minHeight="48dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="386dp" />

    <EditText
        android:id="@+id/raza"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:autofillHints=""
        android:background="@drawable/borde_redondo_transparente"
        android:fontFamily="@font/alata_regular"
        android:hint="@string/raza"
        android:inputType="TODO"
        android:minHeight="48dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textSize="19sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="571dp" />

    <EditText
        android:id="@+id/edad"
        android:layout_width="247dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:autofillHints=""
        android:background="@drawable/borde_redondo_transparente"
        android:fontFamily="@font/alata_regular"
        android:hint="@string/age"
        android:inputType="TODO"
        android:minHeight="48dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edad"
        app:layout_constraintTop_toBottomOf="@+id/mascota"
        tools:layout_editor_absoluteX="73dp" />

    <ImageView
        android:layout_width="221dp"
        android:layout_height="214dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_a_color"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="136dp" />

    <Button
        android:id="@+id/registrar"
        android:layout_width="189dp"
        android:layout_height="41dp"
        android:background="@drawable/borde_redondo_transparente"
        android:fontFamily="@font/alata_regular"
        android:paddingHorizontal="60dp"
        android:paddingVertical="0dp"
        android:text="@string/start"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edad"
        app:layout_constraintVertical_bias="0.655" />

</androidx.constraintlayout.widget.ConstraintLayout>