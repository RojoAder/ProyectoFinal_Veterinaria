            android:layout_marginTop="10dp"
            android:fontFamily="@font/alata_regular"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingHorizontal="60dp"
            android:textSize="23sp"
            android:lines="3"/>
    </LinearLayout>

