<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tips"
    android:orientation="vertical"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_menu"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/menuButton"/>


        <TextView
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:text="@string/tips"
            android:layout_gravity="center"
            android:background="@drawable/borde_redondo_cuadrado_rojo"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/alata_regular"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingHorizontal="60dp"
            android:textSize="20sp"
            android:lines="3"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_baseline_home_24" />
    </LinearLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Cepillo para el pelo"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo_rojo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Shampoo"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo_rojo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Correa y collar"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo_rojo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Cortauñas"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo_rojo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Ropa para invierno"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo_rojo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Cartilla de vacunación"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo_rojo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="App CuidaVet"
        android:layout_gravity="center"
        android:background="@drawable/borde_redondo_rojo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/alata_regular"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view" />

</androidx.drawerlayout.widget.DrawerLayout>